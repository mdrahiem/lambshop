generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Yak {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  age       Float
  sex       String
  Herd      Herd[]
}

model Herd {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  yak       Yak      @relation(fields: [yakId], references: [id])
  yakId     Int
}

model Order {
  id        Int      @id @default(autoincrement())
  customer  String
  milk      Float
  skins     Int?
  days      Int
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
